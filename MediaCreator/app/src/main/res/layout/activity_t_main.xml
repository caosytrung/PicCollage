    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/snLMain">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        >
        <android.support.v7.widget.CardView
            android:layout_margin="8dp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:padding="4dp"
            card_view:cardCornerRadius="4dp"
            card_view:contentPadding="4dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            >
            <LinearLayout
                android:layout_marginTop="46dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center_horizontal"
                    android:textSize="42sp"
                    android:id="@+id/tvAppName"
                    android:text="Media Creator"
                    android:textColor="@color/black_default"
                    />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginRight="16dp"
                    android:text="Grooo - TCS"
                    android:textColor="@color/md_green_500"
                    android:textSize="16sp" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <vn.com.grooo.mediacreator.ui.WavyLineView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginBottom="8dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TableRow
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_centerInParent="true"
                >

                <android.support.v7.widget.CardView
                    android:id="@+id/cvProject"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp"
                    card_view:cardCornerRadius="4dp"
                    card_view:contentPadding="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_project" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Collages"
                            android:textSize="16sp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:id="@+id/cvCollage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp"
                    app:cardElevation="4dp"
                    app:cardUseCompatPadding="true"
                    card_view:cardCornerRadius="4dp"
                    card_view:contentPadding="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/icon_collage" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New Collage"
                            android:textSize="16sp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </TableRow>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_image_about"
            android:elevation="4dp"
            >
            <TextView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:text="i"
                android:textStyle="bold"
                android:textSize="24sp"
                android:textColor="@color/black"
                android:id="@+id/tvNextToAblout"
                />
        </RelativeLayout>

